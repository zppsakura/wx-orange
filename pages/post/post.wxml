<view class='post-container'>
  <swiper indicator-dots='true' autoplay='true' interval='5000' circular='true'>
    <swiper-item wx:for="{{swiper}}" wx:for-item="item">
      <image class='post-img' src="{{item.postImg}}"></image>
    </swiper-item>
  </swiper>
</view>
<view wx:for="{{message}}" wx:for-item="item" wx:for-index="idx" >
<view class='post-mid'>
  <view class='mid-line'></view>
  <view class='mid-title'>
    <image class='img' src="{{item.titleImg}}"></image>
    <text class='txt'>{{item.data}}</text>
  </view>
  <view class='mid-message'>
    <text class='title'>{{item.title}}</text>
    <view class='img-container'>
      <image class='img' src="{{item.contentImg}}"></image>
    </view>
    <view class="content">
      <text class='message'>{{item.message}}</text>
    </view>
  </view>
</view>
<view class='footer'>
  <image class='img' src="{{item.eyeImg}}"></image>
  <text>{{item.eyetxt}}</text>
  <image class='img2' src="{{item.messageImg}}"></image>
  <text>{{item.messagetxt}}</text>
</view>
</view>
